{
    "include": ["src/**/*"],
    "compilerOptions": {
        "target": "es2022",
        "strict": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "moduleResolution": "node",
        "module": "esnext",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "types": ["vite/client"]
    },
}
