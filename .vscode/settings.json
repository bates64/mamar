{
    "files.exclude": {
        "target": true,
        "Cargo.lock": true,
        ".parcel-cache": true,
    },
    "editor.rulers": [120],
    "files.associations": {
        "*.mamar": "ron",
    },

    "eslint.format.enable": true,
    "editor.formatOnSaveMode": "file",
    "[typescript]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint",
        "editor.formatOnSave": true,
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint",
        "editor.formatOnSave": true,
    },
    "[rust]": {
        "editor.defaultFormatter": "rust-lang.rust-analyzer",
        "editor.formatOnSave": true,
    },
    "clang-tidy.blacklist": ["*"]
}
